<div class="bg-page find-password">
  <div class="form-container">
    <div class="form-content">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <h3>重置密码</h3>
        <div>
          <%= f.input :reset_password_token, as: :hidden %>
          <div class="form-group">
            <%= f.input :password, label: false, required: true, autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, label: false, required: true %>
          </div>
          <div class="form-group">
            <%= f.button :submit, "确定", class: 'btn Immediately' %>
          </div>
          <p class="small-notice">
            <span>记得密码？</span>
            <a href="/users/sign_in">马上登录</a>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
