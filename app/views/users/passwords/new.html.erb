<div class="bg-page find-password">
  <div class="form-container">
    <div class="form-content">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <h3>找回密码</h3>
        <div>
          <div class="form-group clearfix">
            <span class="label-text">您的邮箱</span>
            <%= f.input :email, required: true, autofocus: true, placeholder: "您的邮箱", label: false %>
            <!-- <p class="error">请输入正确的邮箱格式</p> -->
          </div>
          <div class="form-group">
            <%= f.button :submit, "立即找回", class: 'btn Immediately', "data-disable-with" => "发送中..." %>
          </div>
          <p class="small-notice">
            <span>记得密码？</span>
            <a href="/users/sign_in">马上登录</a>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>