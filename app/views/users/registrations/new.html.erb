<style type="text/css">
  html{ background: url('<%= image_url "bg2.jpg" %>') no-repeat center top; background-size: auto 100%;}
  .full,.full body,.bg-page{height: auto;}
</style>


<div class="bg-page">
  <div class="form-container form-register">
    <div class="form-content">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h3>马上注册，即可参与活动，赢大奖！</h3>
      <div>
        <div class="form-group clearfix">
          <em class="start-red">*</em>
          <span class="label-text">用户昵称</span>
          <%= f.input :nickname, required: true, autofocus: true, type: 'text', label: false %>
          <!-- <p class="error">请输入昵称</p> -->
        </div>
        <div class="form-group clearfix">
          <em class="start-red">*</em>
          <span class="label-text">您的密码</span>
          <%= f.input :password, required: true, type: 'text', label: false %>
          <!-- <p class="error">请输入正确的邮箱格式</p> -->
        </div>
        <div class="form-group clearfix">
          <em class="start-red">*</em>
          <span class="label-text">确认密码</span>
          <%= f.input :password_confirmation, required: true, type: 'text', label: false %>
          <!-- <p class="error">请输入正确的邮箱格式</p> -->
        </div>
        <div class="form-group clearfix">
          <em class="start-red">*</em>
          <span class="label-text">真实姓名</span>
          <%= f.input :name, required: true, autofocus: true, type: 'text', label: false %>
          <!-- <p class="error">请输入真实姓名</p> -->
        </div>
        <div class="form-group clearfix">
          <em class="start-red">*</em>
          <span class="label-text">手机号码</span>
          <%= f.input :mobile, required: true, autofocus: true, type: 'text', label: false %>
          <div class="clearfix" style="width: 100%;">
            <p class="form-small right">手机号码为中奖用户验证的唯一标准，请填写真实有效的手机号</p>
          </div>
          <!-- <p class="error">请输入您的手机号码</p> -->
        </div>
        <div class="form-group clearfix">
          <em class="start-red">*</em>
          <span class="label-text">邮箱地址</span>
          <%= f.input :email, required: true, autofocus: true, type: 'text', label: false %>
          <!-- <p class="error">请输入正确的邮箱格式</p> -->
        </div>
        <div class="form-group">
          <input class="btn btn-mar" type="submit" value="立即注册" />
        </div>
        <p class="small-notice small-notice2 clearfix">
          <span>已经注册？</span>
          <a href="/users/sign_in">马上登录</a>
          <a class="back" href="/">返回首页</a>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :js do %>
<script type="text/javascript">
  $(function(){
    var validator = $("#new_user").validate({
      rules: {
        "user[nickname]": { required: true },
        "user[password]": { required: true },
        "user[password_confirmation]": { required: true },
        "user[mobile]": { required: true },
        "user[email]": { required: true }
      }
    })
  })
</script>
<% end %>