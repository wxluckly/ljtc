<div class="wrap">  <!-- 此处class有的页面会有添加 class="wrap wrap-grey" -->
  <%= render 'header' %>
  <div class="banner-module">
    <div class="main_visual">
      <div class="flicking_con">
        <a href="javascript:;">1</a>
