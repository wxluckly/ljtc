  <div class="main">
    <div class="inner-module">
      <div class="container">
        <h2 class="title clearfix">
          <span>全球热门</span>
        </h2>
        <div class="content">
          <ul class="hot-address clearfix">
            <li>
              <a href="/areas/0">
                <%= image_tag 'zhou_03.jpg', width: "320", height: "260" %>
                <div class="opcity-bg"></div>
                <span>亚洲</span>
              </a>
            </li>
            <li>
              <a href="/areas/1">
                <%= image_tag 'zhou_04.jpg', width: "320", height: "120" %>
                <div class="opcity-bg"></div>
                <span>欧洲</span>
              </a>
              <a href="/areas/3">
                <%= image_tag 'zhou_10.jpg', width: "320", height: "120" %>
