<ul class="nav nav-tabs">
  <li <% if @event_id == 1 %>class="active"<% end %>><a href="/admin/travels/rank">活动一</a></li>
  <li <% if @event_id == 2 %>class="active"<% end %>><a href="/admin/travels/rank?event_id=2">活动二</a></li>
  <li <% if @event_id == 3 %>class="active"<% end %>><a href="/admin/travels/rank?event_id=3">活动三</a></li>
  <li <% if @event_id == 4 %>class="active"<% end %>><a href="/admin/travels/rank?event_id=4">活动四</a></li>
</ul>
<div class="row">
  <div class="span3 pull-right">
  </div>
  
  <div class="span12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>标题</th>
          <th>综合分</th>
          <th>喜欢数</th>
          <th>分享数</th>
          <th>浏览数</th>
          <th>用户名</th>
          <th>用户电话</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @travels.each do |travel| %>
        <tr>
          <td><a href="/admin/travels_actions?travel_id=<%= travel.id %>" target="_blank"><%= travel.title %></a></td>
          <td><%= travel.score %></td>
          <td><%= travel.like_count %></td>
          <td><%= travel.share_count %></td>
          <td><%= travel.read_count %></td>
          <td><%= travel.user.name %></td>
          <td><%= travel.user.mobile %></td>
          <td>
            <%= link_to "编辑", edit_admin_travel_path(travel), target: '_blank', class: 'btn' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>